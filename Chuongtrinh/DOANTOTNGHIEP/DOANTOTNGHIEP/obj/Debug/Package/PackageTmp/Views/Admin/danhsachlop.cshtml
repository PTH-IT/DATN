@model List<DOANTOTNGHIEP.Models.LopHoc>
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table_id').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/vi.json"
                }
            });
        });
    </script>
</head>
<body>
    <div style="margin:5px;margin-top:20px;">
        <table style="margin-top:10px;width:100%" class="table table-hover table_id">

            <thead class="table-primary">
                <tr role="row" class="bg-primary">





                    <th style="border:1px solid white">
                        <label>Tên lớp học </label>

                    <th style="border:1px solid white">
                        <label>Ngày tạo lớp học</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Người tạo lớp học</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Email người tạo lớp</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Số lượng sinh viên</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Số lượng giáo viên</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Số lượng bài tập</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Action</label>
                    </th>



                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var i in Model)
                    {

                        
                        <tr>






                            <th style="padding:5px; background-color:#E6E6E6;border:3px solid white">
                                @i.TenLop
                            </th>
                            <th style="padding:5px; background-color:#E6E6E6;border:3px solid white">
                                @i.NgayTao
                            </th>
                            <th style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                @i.TaiKhoan.Ho  @i.TaiKhoan.Ten
                            </th>
                            <th style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                @i.TaiKhoan.Email
                            </th>
                            <th style="padding:5px; background-color:#E6E6E6;border:3px solid white">
                                @i.ThanhVienLops.ToList().FindAll(x => x.ChucVu.ToLower().Contains("GiaoVien".ToLower())).Count
                            </th>
                            <th style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                @i.ThanhVienLops.ToList().FindAll(x => x.ChucVu.ToLower().Contains("SinhVien".ToLower())).Count
                            </th>
                            <th style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                @i.BaiTaps.ToList().Count
                            </th>
                            <th style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                <a href="~/Admin/chitietlophoc/@i.MaLop">
                                    Xem chi tiết
                                </a>
                            </th>


                        </tr>
                        
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
