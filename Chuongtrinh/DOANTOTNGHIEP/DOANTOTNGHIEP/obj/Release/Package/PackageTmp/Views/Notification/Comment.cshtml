                <label class="bmd-label-floating" style="color:white">Comment</label><br />
                <input class="form-control" type="text" name="maclassid" placeholder="Mã Lớp" required style="width:100%" /><br />
            </div>
        }
        <div class="form-group bmd-form-group" style="margin-top:-20px">
            <label class="bmd-label-floating" style="color:white"></label><br />
            <input class="form-control" type="text" name="maclassid" placeholder="Mã Lớp" required style="width:100%" /><br />
