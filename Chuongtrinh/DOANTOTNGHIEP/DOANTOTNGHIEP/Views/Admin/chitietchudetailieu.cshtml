@model List<DOANTOTNGHIEP.Models.Library>
@{

    var machude = ViewBag.machude as string;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table_id').DataTable({
                dom: '<"row"<"col-sm-6"l B> <"col-sm-6"f>>  <tr> <"row"<"col-sm-6"i><"col-sm-6 d-flex justify-content-end"p>>',

                buttons: [
                    {
                        text: '<i class="fa fa-user-plus"></i>  add',
                        attr: {
                            class: "addAccount btn btn-primary",
                            'data-toggle': "modal",
                            'data-target': "#modalshowupload",
                        },
                        action: function (e, dt, node, config) {

                        }
                    }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/vi.json"
                }
            });
        });
           
    </script>
</head>
<body>




    <div style="margin:5px;margin-top:20px;">
        <table style="margin-top:10px;width:100%" class="table table-hover table_id">

            <thead class="table-primary">
                <tr role="row" class="bg-primary">





                    <th style="border:1px solid white">
                        <label>Tài Liệu</label>
                    </th>
                    <th style="border:1px solid white">
                        <label>Thao Tác</label>
                    </th>



                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var i in Model)
                    {
                        <tr>
                            <td style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                                @i.Name
                            </td>
                            <td style="padding:5px;background-color:#E6E6E6;border:3px solid white ">
                            <a href="http://localhost:1909/public/file?location=@i.Location"  target="_blank" rel="noopener noreferrer" >Xem tài liệu</a>
                            </td>
                        </tr>
                       
                            

                    }
                }
            </tbody>
        </table>
    </div>
    <div class="container">


        <!-- Modal -->
        <div class="modal fade" id="modalshowviewpdf" role="dialog" style="margin:40px">
            <div class="modal-dialog" style=" width: 100%; height: 95%; margin: 0; padding: 0;">

                <!-- Modal content-->
                <div class="modal-content" style="height: auto; min-height: 95%; border: 0 none; border-radius: 0; box-shadow: none;">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" style="font-size:50px">&times;</button>
                        <a type="button" class="fa fa-download close viewshowpdfdownload" href="~/Content/BTTL/RLSV_CNTT59_2021-2022_HKy1.pdf" download style="font-size: 50px ;margin-right:100px"></a>
                        <h2 class="modal-title">Show tài liệu</h2>
                    </div>
                    <iframe frameBorder="0"
                            scrolling="auto"
                            height="100%"
                            width="100%" class="viewshowpdf"></iframe>

                </div>

            </div>
        </div>

    </div>
</body>
</html>
